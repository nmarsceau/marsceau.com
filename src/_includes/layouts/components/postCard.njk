{% css %}
.postCard {
    margin-block-start: 1.5rem;
}

.postCard h2 {
    line-height: 1;
    margin-block: 0;
}

.postCard .postInfo {
    margin-block-end: 0.25rem;
}

@media screen and (min-width: 425px) {
    .postCard h2 {
        margin-block-end: 0.1em;
    }
}
{% endcss %}
{% set headingTag = headingTag if headingTag else "h2" %}
<article class="postCard">
    <{{ headingTag }}>
        <a href="{{ post.url }}">{{ post.data.title }}</a>
    </{{ headingTag }}>
    <div class="postInfo">
        {% set date = post.data.date %}
        {% include "layouts/components/postDate.njk" %}
        {% set tags = post.data.tags %}
        {% include "layouts/components/postTags.njk" %}
    </div>
    <!-- TODO: display the post tags here. -->
    <p>{{ post.data.description }}
</article>