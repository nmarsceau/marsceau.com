{% css %}
/* Skip to Main Content */
a[href="#main-content"] {
    z-index: 999;
    position: fixed;
    top: -100px;
    padding: 0.5em 1em 0.75em;
    left: 30px;
    border-radius: 0px 0px 10px 10px;
    box-shadow: 0px -3px 20px -2px var(--prussionBlue);
    background-color: #fff;
    color: var(--prussionBlue);
    border: 3px solid var(--prussionBlue);
    border-top: none;
}

a[href="#main-content"]:focus, a[href="#main-content"]:active {
    top: 0;
    text-decoration: underline;
    outline: none;
}

/* Brand */
.brand {
    color: var(--prussionBlue);
    font-family: 'Fugaz One', sans-serif;
    font-size: var(--brandFontSize);
    text-transform: uppercase;
    margin-block: 1rem 0.75rem;
    border-block-end: 1rem solid var(--sapphireBlue);
    display: inline-block;
    margin-inline: -0.5rem;
    padding-inline: 0.5rem;
    position: relative;
}

.brand::after {
    content: ' ';
    position: absolute;
    width: 100%;
    height: 1rem;
    left: 0.25rem;
    bottom: -1.25rem;
    z-index: -1;
    background-color: var(--carolinaBlue);
}

@media screen and (min-width: 42rem) {
    .brand {
        margin-inline: -1rem;
        padding-inline: 1rem;
    }
}

.brand a {
    color: var(--prussionBlue);
    text-decoration: none;
}
{% endcss %}
<a href="#main-content">Skip to main content</a>
<header>
	<div class="brand">
		<a href="/">Nick Marsceau</a>
	</div>
</header>
