    <header>
        <h1>{{ title }}</h1>
		{% include "layouts/components/postInfo.njk" %}
    </header>
	{% if tags.includes('rss-club') %}
		{% css %}
		.rss-club {
			position: relative;
			margin-inline-start: 1rem;
			margin-block: 0.5rem;
			padding-block: 0.5rem;
			border-inline-start: 0.5rem solid var(--sapphireBlue);
		}

		.rss-club::after {
			content: ' ';
			position: absolute;
			width: 0.5rem;
			height: 100%;
			left: -0.67rem;
			bottom: -0.17rem;
			z-index: -1;
			background-color: var(--carolinaBlue);
		}

		.rss-club tt {
			margin-inline-start: 0.5rem;
		}
		{% endcss %}
